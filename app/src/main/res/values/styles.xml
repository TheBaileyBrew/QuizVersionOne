<resources xmlns:android="http://schemas.android.com/tools">

    <!-- LIGHT Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExtraCreditText">
        <item name="android:textSize">@dimen/extracredit_text_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/extracredit_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/extracredit_padding_vertical</item>
    </style>

    <style name="QuestionText">
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/question_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/question_padding_vertical</item>
    </style>
    <style name="QuestionTextHint">
        <item name="android:textSize">@dimen/question_text_size_hint</item>
        <item name="android:textColor">#555555</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/question_padding_vertical</item>
    </style>

    <style name="RadioButtonSelectionOptions">
        <item name="android:paddingLeft">@dimen/radio_button_padding_small</item>
        <item name="android:textSize">@dimen/radio_button_text_size</item>
        <item name="android:textColor">#222222</item>
        <item name="android:colorControlNormal">@color/darkBlack</item>
        <item name="android:colorControlActivated">@color/darkBlack</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="StandardTextBoxDisplay">
        <item name="android:layout_marginRight">@dimen/current_score_padding_uniform</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/current_score_text_size</item>
        <item name="android:textColor">#111111</item>
    </style>

    <style name="EditTextFormatting">
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/question_padding_vertical</item>
        <item name="android:layout_marginLeft">@dimen/uniform_left_margin_answer_selections</item>
        <item name="android:layout_marginRight">@dimen/uniform_left_margin_answer_selections</item>
    </style>

    <style name="CheckedTextViewFormatting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CheckboxSelectionOptions">
        <item name="android:paddingLeft">@dimen/radio_button_padding_small</item>
        <item name="android:layout_margin">@dimen/toggle_switch_padding</item>
        <item name="android:textSize">@dimen/radio_button_text_size</item>
        <item name="android:textColor">#222222</item>
        <item name="android:colorControlNormal">@color/darkBlack</item>
        <item name="android:colorControlActivated">@color/darkBlack</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="final_gridview_display">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>
