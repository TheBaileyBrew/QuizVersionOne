<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="6dp"
                    />
                <gradient
                    android:startColor="#003cff"
                    android:centerColor="#9400ffd4"
                    android:centerY="0.75"
                    android:endColor="#000dff"
                    android:angle="270"
                    />
                <stroke android:width="2dp"
                    android:color="#55000000"
                    />
                <padding
                    android:left="@dimen/progress_bar_side_extra_padding"
                    android:right="@dimen/progress_bar_side_extra_padding"
                    />
            </shape>
        </clip>
    </item>

</selector>