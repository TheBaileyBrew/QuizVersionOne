<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thebaileybrew.firefly.quizversionone.MainActivity">

    <ImageView
        android:id="@+id/firefly_main_header_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/firefly_poster_8inch"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClickDisplayFrontScreenMenu"
        />

    <TextView
        android:id="@+id/firefly_main_text_click_to_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/voluta_script"
        android:text="Click to Start Quiz"
        android:textSize="120sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickDisplayFrontScreenMenu"
        />

</RelativeLayout>
