<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="YOU'VE TAKEN SERENITY ACROSS THE UNIVERSE ..."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="BUT MAKE SURE YOU DIDN'T MISS ANYTHING FIRST"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:text="If it's GREEN, you answered the question"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="italic"
        android:textColor="@color/incorrectRed"
        android:text="If it's RED, you should probably answer that question.."/>
    <GridLayout
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:rowCount="3"
        android:columnCount="2"
        android:padding="16dp">
        <TextView
            android:id="@+id/final_question_one"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textSize="22dp"
            android:textColor="@color/colorPrimaryWhite"
            android:gravity="center_horizontal"
            android:text="ONE"/>
        <TextView
            android:id="@+id/final_question_two"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textSize="22dp"
            android:textColor="@color/colorPrimaryWhite"
            android:gravity="center_horizontal"
            android:text="TWO"/>
        <TextView
            android:id="@+id/final_question_three"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textSize="22dp"
            android:textColor="@color/colorPrimaryWhite"
            android:gravity="center_horizontal"
            android:text="THREE"/>
        <TextView
            android:id="@+id/final_question_four"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textSize="22dp"
            android:textColor="@color/colorPrimaryWhite"
            android:gravity="center_horizontal"
            android:text="FOUR"/>
        <TextView
            android:id="@+id/final_question_five"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textSize="22dp"
            android:textColor="@color/colorPrimaryWhite"
            android:gravity="center_horizontal"
            android:text="FIVE"/>
        <TextView
            android:id="@+id/final_question_six"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textSize="22dp"
            android:textColor="@color/colorPrimaryWhite"
            android:gravity="center_horizontal"
            android:text="SIX"/>
    </GridLayout>
    <Button
        android:id="@+id/submitScoreToSocialMedia"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:onClick="onClickSubmitScoreToSocialMedia"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:text="SUBMIT TO SOCIAL MEDIA"/>
</LinearLayout>