<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <ImageView
        android:paddingTop="@dimen/photo_padding_top"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/firefly_one"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/question_three_text"
        style="@style/QuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which of the following are names of Jayne's guns?"
        />
    <LinearLayout
        android:id="@+id/question_three_linear_switch_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/question_padding_vertical"
        android:layout_marginBottom="@dimen/question_padding_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginLeft="@dimen/submit_answer_padding_sides"
            android:layout_marginRight="@dimen/submit_answer_half_padding_sides"
            android:layout_weight="1">
            <CheckedTextView
                android:id="@+id/question_three_optionA"
                android:onClick="onClickInitiateCheckedTextView"
                style="@style/CheckedTextViewFormatting"
                android:text="LUX"
                android:tag="1.25"/>
            <CheckedTextView
                android:id="@+id/question_three_optionB"
                android:onClick="onClickInitiateCheckedTextView"
                style="@style/CheckedTextViewFormatting"
                android:text="SELINA"
                android:tag="1.00"/>
            <CheckedTextView
                android:id="@+id/question_three_optionC"
                android:onClick="onClickInitiateCheckedTextView"
                style="@style/CheckedTextViewFormatting"
                android:text="ANNA"
                android:tag="1.00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginLeft="@dimen/submit_answer_half_padding_sides"
            android:layout_marginRight="@dimen/submit_answer_padding_sides"
            android:layout_weight="1">
            <CheckedTextView
                android:id="@+id/question_three_optionD"
                android:onClick="onClickInitiateCheckedTextView"
                style="@style/CheckedTextViewFormatting"
                android:text="SOPHIA"
                android:tag="1.00"/>
            <CheckedTextView
                android:id="@+id/question_three_optionE"
                android:onClick="onClickInitiateCheckedTextView"
                style="@style/CheckedTextViewFormatting"
                android:text="VERA"
                android:tag="1.25"/>
            <CheckedTextView
                android:id="@+id/question_three_optionF"
                android:onClick="onClickInitiateCheckedTextView"
                style="@style/CheckedTextViewFormatting"
                android:text="LUCY"
                android:tag="1.00"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/submit_answer_question_three"
        android:onClick="onClickSubmitQuestionThree"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/submit_answer_padding_sides"
        android:textAllCaps="false"
        android:text="Submit answer"
        android:textSize="@dimen/submit_answer_text_size"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/question_three_extra_credit"
        style="@style/QuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extra Credit:"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/question_three_extra_credit_text"
        style="@style/ExtraCreditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vera is Jayne's favorite gun, but what fictional Clint Eastwood character is the model named after?"/>
    <RadioGroup
        android:visibility="gone"
        android:id="@+id/questionThreeExtraCreditRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/uniform_left_margin_answer_selections">
        <RadioButton
            android:id="@+id/question_threeEC_a1"
            android:theme="@style/RadioButtonSelectionOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walt Kowalski"/>
        <RadioButton
            android:id="@+id/question_threeEC_a2"
            android:theme="@style/RadioButtonSelectionOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirty Harry"/>
        <RadioButton
            android:id="@+id/question_threeEC_a3"
            android:theme="@style/RadioButtonSelectionOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robert Kincaid"/>
        <RadioButton
            android:id="@+id/question_threeEC_a4"
            android:theme="@style/RadioButtonSelectionOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="William Munny"/>
    </RadioGroup>

</LinearLayout>